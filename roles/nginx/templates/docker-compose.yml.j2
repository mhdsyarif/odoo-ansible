services:
  nginx:
    image: nginx:stable
    container_name: nginx
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - {{ docker_nginx_dir }}/nginx.conf:/etc/nginx/conf.d/default.conf:ro
      - {{ docker_nginx_dir }}/certbot/conf:/etc/letsencrypt
      - {{ docker_nginx_dir }}/certbot/www:/var/www/html
    restart: always
    networks:
      - {{ docker_networks }}

  certbot:
    image: certbot/certbot
    container_name: certbot
    volumes:
      - {{ docker_nginx_dir }}/certbot/conf:/etc/letsencrypt
      - {{ docker_nginx_dir }}/certbot/www:/var/www/html
      - /var/run/docker.sock:/var/run/docker.sock

networks:
  {{ docker_networks }}:
    external: true